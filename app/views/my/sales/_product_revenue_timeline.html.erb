<div id="sales_by_product_revenue_timeline_container" 
     style="height:900px; background: url('/assets/512px-Loader.gif'); background-repeat:no-repeat; background-position: center" %></div>

<script type="text/javascript">

$(function() {
  $.getJSON('/async/sales',
              {
                  chart: 'sales_by_product_revenue_timeline'
              },
              function(data){
                
        $('#sales_by_product_revenue_timeline_container').highcharts({
            chart: {
                type: 'area',
                marginBottom: 100,
                zoomType: 'x',
                style: {
                  fontFamily: 'Arial, Helvetica, Clean, sans-serif'
                },
                events: {
                   load: function() {
  	                        document.getElementById('container').style.background = 'none';
                          }
                }
            },
            title: {
              text: 'Sales Revenue Over Time Broken Down By Product'
            },
            colors: data.colors,
            xAxis: {
              allowDecimals: false,
              type: 'category',
              crosshair: true,
              categories: data.dates,
              labels: {
                // align: 'left',
                reserveSpace: true
                // rotation: 270
              }
            },
          yAxis: {
            title: {
              text: 'Revenue ($L)'
            },
            min: 0
            // visible: false,
            // startOnTick: false,
            // endOnTick: false
          },
          legend: {
            layout: 'vertical',
            verticalAlign: 'middle',
            align: 'right',
            enabled: false
          },
          plotOptions: {
              area: {
                  stacking: 'normal'
              },
              series: {
                  label: {
                      minFontSize: 5,
                      maxFontSize: 15,
                      style: {
                          color: 'rgba(255,255,255,0.75)'
                      }
                  }
              }
          },
          series: data.data
        })
    });
});


</script>

