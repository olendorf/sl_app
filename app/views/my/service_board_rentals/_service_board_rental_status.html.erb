<div id="service_board_rental_status_chart_container" 
     style="width:1500; height:900px; background: url('/assets/512px-Loader.gif'); background-repeat:no-repeat; background-position: center"></div>

<script type="text/javascript">

$(function() {
  $.getJSON('/async/service_board_rentals',
              {
                  chart: 'service_board_rental_status_chart'
              },
              function(data){
                
        $('#service_board_rental_status_chart_container').highcharts({
                chart: {
                    type: 'column',
                    style: {
                        fontFamily: 'Arial, Helvetica, Clean, sans-serif'
                    },
                   events: {
                     load: function() {
    	                        document.getElementById('container').style.background = 'none';
                            }
               }
                },
                title: {
                    text: 'Service Board Rental Statuses By Region'
                },
                xAxis: {
                    categories: data.regions,
                    crosshair: true,
                    title: {
                        text: 'Region'
                    }
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'Number of Service Boards'
                    }
                },

                plotOptions: {
                    column: {
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: data.data
     
        })
    });
});


</script>

