
<div id="donor_scatter_plot_container" 
     style="width: 1000; height:400px; background: url('/assets/512px-Loader.gif'); background-repeat:no-repeat; background-position: center"></div>


<script type="text/javascript">

        $(function () { 
                $.getJSON('/async/donations',
                                {chart: 'donor_scatter_plot'},
                                function(data) {
                     $('#donor_scatter_plot_container').highcharts({ 
                        chart: {
                            type: 'scatter',
                            zoomType: 'xy',
                            style: {
                              fontFamily: 'Arial, Helvetica, Clean, sans-serif'
                            },
                            events: {
                              load: function() {
            	                        document.getElementById('container').style.background = 'none';
                                    }
                            }
                        },
                        title: {
                            text: 'Amount Donated by Number of Donations by Donor'
                        },
                        subtitle: {
                            data
                        },
                        xAxis: {
                            title: {
                                enabled: true,
                                text: 'Donations'
                            },
                            startOnTick: true,
                            endOnTick: true,
                            showLastLabel: true,
                            tickInterval: 1,
                            min: 1
                        },
                        yAxis: {
                            title: {
                                text: 'Total Donated ($L)'
                            },
                            gridLineWidth:0
                        },
                        legend: {
                        		enabled: false
                        },
                        plotOptions: {
                            scatter: {
                                marker: {
                                    radius: 5,
                                    states: {
                                        hover: {
                                            enabled: true,
                                            lineColor: 'rgb(100,100,100)'
                                        }
                                    }
                                },
                                states: {
                                    hover: {
                                        marker: {
                                            enabled: false
                                        }
                                    }
                                },
                                tooltip: {
                                    headerFormat: '<b>{point.point.name}</b><br>',
                                    pointFormat: '{point.x} donations, {point.y} $L'
                                }
                            }
                        },
                        series: [{
                            name: 'Donor',
                            data: data
                        }]
                    }); 
                });
            });


</script>