 <header class="main-header">
        <div class="outer-container">
            <div class="header-upper clearfix">
                <div class="outer-box pull-left">
                    <div class="logo-box pull-left">
                        <figure class="logo">
                            <%= link_to root_path do %>
                                <%= image_tag("logo_32_no_bkgnd.png", alt: "") %>
                                &nbsp;SL<span class="highlight">app </span>Data
                            <% end %>
                        </figure>
                    </div>
                    <div class="menu-area pull-left">
                        <!--Mobile Navigation Toggler-->
                        <div class="mobile-nav-toggler">
                            <i class="icon-bar"></i>
                            <i class="icon-bar"></i>
                            <i class="icon-bar"></i>
                        </div>
                        <nav class="main-menu navbar-expand-md navbar-light">
                            <div class="collapse navbar-collapse show clearfix" id="navbarSupportedContent">
                                <ul class="navbar-nav navigation clearfix">
                                    <li class="nav-item <%= 'active' if action_name == 'home' || action_name.nil? %>">
                                        <%= link_to 'Home', pages_home_path %>
                                    </li> 
                                    <li class="nav-item dropdown <%= 'active' if action_name == 'products' %>">
                                        <%= link_to 'Products', pages_products_path %>
                                    </li>
                                    <li class = "nav-item dropdown <%= 'active' if action_name == 'pricing' %>">
                                        <%= link_to 'Pricing', pages_pricing_path %>
                                    </li>
                                    <li class = "nav-item dropdown <%= 'active' if action_name == 'documentation' %>">
                                        <%= link_to "Documentation", pages_documentation_path %>
                                    </li>
                                    <li class = "nav-item dropdown <%= 'active' if action_name == 'faqs' %>">
                                        <%= link_to "FAQs", pages_faqs_path %>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
                <div class="outer-box pull-right">
                    <div class="menu-left-content pull-left">
                        <nav class="main-menu navbar-expand-md navbar-light">
                            <div class="collapse navbar-collapse show clearfix" id="navbarSupportedContent">
                                
                                <ul class="navigation user-nav clearfix">
                                    
                                    <li><%= link_to "Visit Us In World" , 
                                                    "https://#{Settings.default.visit_us_slurl}",
                                                        class: 'slurl' %></li>
                                    <li class="dropdown">
                                        <% if current_user %>
                                            <a href="#"><%= current_user.avatar_name %></a>
                                            <ul>
                                                <li>
                                                    <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
                                                </li>
                                                <li>
                                                    <%= link_to 'My stuff', my_dashboard_path %>
                                                </li>
                                                <% if current_user.can_be_admin? %>
                                                    <li>
                                                        <%= link_to 'Admin stuff', admin_dashboard_path %>
                                                    </li>
                                                <% end %>
                                            </ul>
                                        <% else %>
                                            <%= link_to 'Login', new_user_session_path %>
                                        <% end %>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                        
                    </div>
                    
                </div>

            </div>
        </div>

        <!--sticky Header-->
        <div class="sticky-header">
            <div class="container clearfix">                        
                <figure class="logo">
                    <%= link_to '/' do %>
                        <%= image_tag("logo_32_no_bkgnd.png", alt: "") %>
                        &nbsp;SL<span class="highlight">app </span>Data
                    <% end %>
                </figure>
                <div class="menu-area">
                    <nav class="main-menu clearfix">
                        <!--Keep This Empty / Menu will come through Javascript-->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- main-header end -->

    <!-- Mobile Menu  -->
    <div class="mobile-menu">
        <div class="menu-backdrop"></div>
        <div class="close-btn"><i class="fas fa-times"></i></div>
        
        <nav class="menu-box">
            <div class="nav-logo"><a href="index.html"><%= image_tag("theme/logo-2.png", alt: "", title: "") %></a></div>
            <div class="menu-outer"><!--Here Menu Will Come Automatically Via Javascript / Same Menu as in Header--></div>
            <div class="contact-info">
                <h4>Contact Info</h4>
                <ul>
                    <li>Chicago 12, Melborne City, USA</li>
                    <li><a href="tel:+8801682648101">+88 01682648101</a></li>
                    <li><a href="mailto:info@example.com">info@example.com</a></li>
                </ul>
            </div>
            <div class="social-links">
                <ul class="clearfix">
                    <li><a href="index.html"><span class="fab fa-twitter"></span></a></li>
                    <li><a href="index.html"><span class="fab fa-facebook-square"></span></a></li>
                    <li><a href="index.html"><span class="fab fa-pinterest-p"></span></a></li>
                    <li><a href="index.html"><span class="fab fa-instagram"></span></a></li>
                    <li><a href="index.html"><span class="fab fa-youtube"></span></a></li>
                </ul>
            </div>
        </nav>
    </div><!-- End Mobile Menu -->