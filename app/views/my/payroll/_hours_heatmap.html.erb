
<div id="hours_heatmap_container" 
     style="width:600px; height:600px;; background: url('/assets/512px-Loader.gif'); background-repeat:no-repeat; background-position: center"></div>

<script type="text/javascript">

        $(function () {
                // var processed_json = new Array();   
                $.getJSON('/async/payroll', 
                                {
                                    chart: 'hours_heatmap'
                                },
                                function(data) {

                    // draw chart
                     $('#hours_heatmap_container').highcharts({ 
                        chart: {
                            type: 'heatmap',
                            style: {
                              fontFamily: 'Arial, Helvetica, Clean, sans-serif'
                            },
                            events: {
                              load: function() {
            	                        document.getElementById('container');
                                    }
                            }

                        },
                    
                    
                        title: {
                            text: 'Hours Worked By Day and Time'
                        },
                    
                        xAxis: {
                            categories: ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 
                                            'Thursday', 'Friday', 'Saturday']
                        },
                    
                        yAxis: {
                            categories: [
                                            '1 AM', '2 AM', '3 AM', '4 AM', '5 AM', '6 AM', '7 AM', 
                                            '8 AM', '9 AM', '10 AM', '11 AM', 'Noon', '1 PM', 
                                            '2 PM', '3 PM', '4 PM', '5 PM', '6 PM', '7 PM', 
                                            '8 PM', '9 PM', '10 PM', '11 PM', '12 PM'
                                        ],
                            title: null
                        },
                    
     
                        colorAxis: {
                            min: 0,
                            minColor: '#FFFFFF',
                            maxColor: Highcharts.getOptions().colors[0]
                        },
                    
                        legend: {
                            align: 'right',
                            layout: 'vertical',
                            margin: 0,
                            verticalAlign: 'top',
                            y: 25,
                            symbolHeight: 280
                        },
                    

                    
                        series: [{
                            name: 'Hours Worked By Day and Time',
                            borderWidth: 1,
                            data: data

                        }]

                    }); 
                });
            });


</script>