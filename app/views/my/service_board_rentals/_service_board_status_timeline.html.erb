<div id="service_board_status_timeline_container" 
     style="width:1500; height:900px;; background: url('/assets/512px-Loader.gif'); background-repeat:no-repeat; background-position: center" %></div>

<script type="text/javascript">

$(function() {
  $.getJSON('/async/service_board_rentals',
              {
                  chart: 'service_board_status_timeline'
              },
              function(data){
                
        $('#service_board_status_timeline_container').highcharts({
            chart: {
                type: 'area',
                marginBottom: 100,
                zoomType: 'x',
                style: {
                  fontFamily: 'Arial, Helvetica, Clean, sans-serif'
                },
                events: {
                  load: function() {
  	                        document.getElementById('container').style.background = 'none';
                          }
                }
            },
            title: {
              text: 'Status of Service Boards over Time'
            },
            // colors: data.colors,
            xAxis: {
              allowDecimals: false,
              type: 'category',
              crosshair: true,
              categories: data.dates,
              labels: {
                // align: 'left',
                reserveSpace: true
                // rotation: 270
              }
            },
          yAxis: {
            title: {
              text: 'Number of Shops'
            },
            min: 0
            // visible: false,
            // startOnTick: false,
            // endOnTick: false
          },
          legend: {
            enabled: true
          },
          plotOptions: {
              area: {
                  stacking: 'normal'
              },
              series: {
                  label: {
                      minFontSize: 5,
                      maxFontSize: 15,
                      style: {
                          color: 'rgba(255,255,255,0.75)'
                      }
                  }
              }
          },
          series: data.data
        })
    });
});


</script>

